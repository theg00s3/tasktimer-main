{
  "name": "pomodoro-app",
  "type": "static",
  "static": {
    "dir": "build"
  },
  "redirects": {
    "/*": {
      "location": "/",
      "status": 200
    }
  },
  "hooks": {
    "build": "npm run build",
    "clean": "rm -rf build"
  },
  "regions": ["eu-central-1"],
  "stages": {
    "production": {
      "domain": "pomodoro.cc"
    },
    "development": {
      "domain": "dev.pomodoro.cc"
    }
  }
}