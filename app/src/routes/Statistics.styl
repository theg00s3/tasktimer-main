@import '../styles/vars.styl'
.noop
  display none

.stats-navigation
  max-width 420px
  width 100%
  margin 0 auto

.statistics-nav-button
  display inline-block
  border-radius 1em
  padding 0.5em 1.5em
  &:hover
    background color_background

.paper-sheet
  display block
  width 9em
  height 7em
  margin 0 auto
  vertical-align middle
  padding 0.5em
  opacity 0.7

.analysis
  overflow hidden
.analysis span
  width 2em
  height 2em
  background red
  border 1px solid #eee
  float left
.analysis [data-value='0']
  background lighten(red,100)
.analysis [data-value='1']
  background lighten(red,80)
.analysis [data-value='2']
  background lighten(red,70)
.analysis [data-value='3']
  background lighten(red,60)
.analysis [data-value='4']
  background lighten(red,50)
.analysis [data-value='5']
  background lighten(red,40)
.analysis [data-value='6']
  background lighten(red,30)
.analysis [data-value='7']
  background lighten(red,20)
.analysis [data-value='8']
  background lighten(red,10)
.analysis [data-value='9']
  background lighten(red,5)
.analysis [data-value='10']
  background lighten(red,5)
.analysis [data-value='11']
  background lighten(red,5)
.analysis [data-value='12']
  background lighten(red,5)
.analysis [data-value='13']
  background lighten(red,5)
.analysis [data-value='14']
  background lighten(red,5)