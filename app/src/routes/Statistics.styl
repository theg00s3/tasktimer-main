@import '../styles/vars.styl'
.noop
  display none

.loading
  transition all .2s ease
  opacity 0.2

.flatpickr-input
  padding 0.5em 1em
  border none
  outline none

.activity
  display block
  margin 1em auto !important
  max-height 20em
  max-width 20em
  overflow-y scroll
.activity-item
  display block
  position relative
  padding 0.5em
  // border-bottom 2px solid color_pomodoro

.idle-time
  margin-top 0.5em
  margin-bottom 1em
.activity-type
  position absolute
  top 4em
  left 0.75em