.limit
  max-width limit
  margin-left auto
  margin-right @margin-left
  padding-left 0.5em
  padding-right @padding-left

  &.small
    max-width limit_small

  &.extended
    max-width limit*1.4

.breath
  margin-top 1em
  margin-bottom @margin-top


html, body
  min-height 50em

main
  padding-top 2em
  padding-bottom @padding-top
  height 100%
  min-height 100%
  min-height 50em
