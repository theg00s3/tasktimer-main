modular-font-size(times = 1)
  font-size (1.125 * times)rem

html
body
  font-size 100%
  font 16px/1.5 'Lato', helvetica, arial, sans-serif
  font-weight 400
  font-smoothing antialiased
  color color_text

  @media all and (max-width limit)
    font-size 16px




h1
h2
h3
h4
h5
h6
  color color_heading
  line-height 1.25
  margin-top 1.5em
  margin-bottom .5em
  font-weight 600

  &.no
    margin-top 0

h1
  modular-font-size(2.15)
h2
  modular-font-size(2)
h3
  modular-font-size(1.75)
h4
  modular-font-size(1.5)
h5
  modular-font-size(1.25)
h6
  modular-font-size(1.125)

.button
button
  font-family inherit
  font-size 1em
  display inline-block
  text-decoration none
  font-weight bold
  background color_pomodoro
  text-shadow 0 0 1px rgba(0,0,0,.3)
  padding 0.7em
  border-radius .25em
  margin .5em .25em
  color white
  border none
  transition all .15s ease-in-out

  *
    color inherit

  &.reset
    background inherit
    padding inherit
    margin inherit
    border-radius inherit
    &:hover
      background inherit


  &.block
    display block
    width 100%

  &:hover
  &:active
    color white

  &:hover
    background lighten(color_pomodoro,5%)

  &:active
    background lighten(color_pomodoro,10%)

  &.no-border
    border none

  &.bordered
    border 1px solid color_pomodoro

  &.simple
    background-color inherit
    color black

  &.center
    display block
    margin-left auto
    margin-right @margin-left
    text-align center

  &[disabled]
    cursor not-allowed
    opacity .5


a
.link
  display inline-block
  color color_link
  // padding .125em .25em
  padding-left 0.125em
  padding-right @padding-left
  text-decoration: none;
  &:hover
    color #47c4fd
    color lighten(color_link,10%)
    text-decoration underline
  &.block
    display block

  &.unlink
    color color_text

strong
  font-weight bold


ul
ol
  margin 1.6em 0 1.6em 1.3em


ol ol
ul ul
ul ol
ol ul
  margin 0.4em 0


hr
  display block
  height 1px
  border 0
  border-top 1px solid #efefef
  margin 3.2em 0
  padding 0


time
  font-size 0.8em
  color rgb(100,100,100)


.tac
  text-align center
.tar
  text-align right

.breath
  margin-top 4em !important
  margin-bottom @margin-top

.light
  color darken(color_light,25%)
  transition color .3s ease-in-out
  &:hover
    color darken(color_light,35%)

.bold
  font-weight bold

.small
  font-size .8rem

sup
  vertical-align super
  font-size smaller

.hidden
  display none !important

pre
  color black
  background lightgrey
  overflow scroll


.tdn
  text-decoration none


.right
  float right
