.brand
  margin 0
  padding 0
  border 0
  font-size 1.1em
  margin-left 0.5rem
  color #333
  opacity 0.7
  text-decoration none
  transition all .3s ease

  &:hover
    opacity 1
    background-color transparent
    text-decoration none
    color #333
    .tld
      opacity 1

  span:first-child
    color color_pomodoro
    font-weight bold

  span.tld
    font-size 0.6em
    opacity 0
    transition .3s all ease
