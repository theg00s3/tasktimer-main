.brand
  float left
  padding 0.6rem
  font-size 1.1em
  color black
  text-decoration none
  transition all .3s ease

  &:hover, &:focus
    opacity 1
    background-color transparent
    text-decoration none
    color #333
    .tld
      opacity 1

  span:first-child
    text-transform uppercase
    color color_pomodoro
    font-weight bold

  span.tld
    font-size 0.6em
    opacity 0
    transition .3s all ease
