body > footer
  position relative
  font-size 0.9rem
  padding 2em .25em
  background darken(color_light,5%)
  box-shadow 0 1px 1px 0 darken(color_light,3%) inset

  .footer__container
    @extend .limit
  
  .thank-you-notes
    margin-top 2em
    text-align center
    max-width @limit

    ul
      margin 0

    space = 1em
    li
      display inline-block
      list-style-type none
      margin-right space
      &:last-child
        margin-right 0
        &:after
          content ''
      
      &:after
        margin-left space
        content ' + '
        display inline-block
  
  .donate 
    margin 1.5em auto

.sitemap
  margin 0
  li
    list-style-type none
  a
    border none
    background transparent
    color darken(color_light,40%)
    font-weight 400

    &:hover
      background transparent