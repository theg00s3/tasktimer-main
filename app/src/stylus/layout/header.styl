body > header
  position fixed
  top 0
  left 0
  right 0
  z-index 9000
  background color_header
  margin auto
  transition none
  height height_header
  border-bottom 1px solid color_light_grey

  .header__container
    @extend .limit
    padding-top 0
    padding-bottom 0

  ul.header__menu
    float right
    margin 0
    padding 0
    list-style-type none
    position relative

    > li
      margin 0
      padding 0
      position relative
      float right
      text-align center
      border-bottom 1px solid transparent
      padding-left 0.25rem
      padding-right @padding-left

  .header--link
    font-size 0.8em
    display inline-block
    height height_header
    min-width 3em
    padding-top (height_header/3.3)
    text-align center
