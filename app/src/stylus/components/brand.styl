.brand
  margin 0
  padding 0
  border 0
  font-size (height_header/2.5)
  margin-left 0.5rem
  margin-top (height_header/5)
  color #333
  opacity 0.7
  text-decoration none
  transition all .3s ease

  &:hover
    opacity 1
    background-color transparent
    text-decoration none
    color #333
    .tld
      opacity 1

  &:first-letter
    color color_pomodoro
    font-weight bold

  span.tld
    font-size 0.6em
    opacity 0
    transition .3s all ease

