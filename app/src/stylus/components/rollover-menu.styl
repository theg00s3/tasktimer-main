.dropdown
  position relative

  .menu
    position absolute
    display none
    background white
    box-shadow 0px 5px 25px -5px #333
    list-style-type none
    width 6rem
    border-radius 5px
    top 111%
    right 0
    text-align left
    z-index 10000
    text-indent 0.5rem
    font-weight bold
    font-size 0.8rem
    li
      a
        display block
        width 100%
        padding .5rem .25rem
        color black

.dropdown.opened .menu
  display block !important


.csstransforms.csstransitions
  .menu
    display block
    transform scale(0)
    transform-origin 100px 0px
    transition all 300ms cubic-bezier(0.34,1.61,0.7,1)
  .dropdown.opened .menu
    transform scale(1) !important
