.modal
  position fixed
  z-index 9999
  top 0
  left 0
  bottom 0
  width 100%
  height 100%
  opacity 0
  transition all 0.15s ease

  &.visible
    opacity 1

.modal-overlay
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  width 100%
  height 100%
  background-color #000000
  opacity 0.8

.modal-dialog
  z-index 10000
  position relative
  width 90%
  max-width limit*0.8

  top 50%
  left 50%
  transform translate(-50%, -50%)

  background-color #fff
  box-shadow 4px 4px 80px #000
  border-radius 5px

.modal-dialog-content
  padding 10px
  text-align left
  border-radius 5px

.modal-close
  position absolute
  top 3px
  right 5px
  padding 5px
  cursor pointer
  font-size 120%
  display inline-block
  font-weight bold
  font-family 'arial', 'sans-serif'
