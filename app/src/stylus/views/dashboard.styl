.pomodoro-timer
  font-size 9em
  margin 0.5rem auto
  padding-top 2rem
  padding-bottom @padding-top
  text-align center
  user-select none


.pomodoro-control-buttons-container
  margin 1rem auto
  max-width limit * 0.8
  overflow hidden

  button
    @extends button.center
    width (100%/3)
    float left
    padding 1em
    border-radius 0
    border-left 1px solid color_pomodoro
    border-right @border-left
    &:first-child
      border-top-left-radius 0.5rem
      border-bottom-left-radius @border-top-left-radius
      border-left none
    &:last-child
      border-top-right-radius 0.5rem
      border-bottom-right-radius @border-top-right-radius
      border-right none


.dashboard-action
  font-size 1.3rem
  opacity 0.7
  transition all .3s ease
  display block
  height size_rounded_button*1.3
  width @height
  line-height @height
  text-align center
  background white
  color color_dark
  border 1px solid rgba(color_dark,0.2)
  border-radius 50%
  transition all 0.1s ease-in-out

  &:hover
  &.active
    color white
    opacity 1
    background lighten(color_dark,10%)
  &:hover
    opacity 0.8
  &:active
    background color_dark
