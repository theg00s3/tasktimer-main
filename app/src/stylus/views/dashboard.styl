.pomodoro-timer
  font-size 8em
  margin 1rem auto
  padding-top 1rem
  padding-bottom @padding-top
  text-align center
  user-select none
  @media all and (max-width limit)
    font-size 7em


.pomodoro-control-buttons-container
  margin 3rem auto
  overflow hidden

  button
    @extends button.center

  button.start-pomodoro
    font-size 1.15em
    padding 1.5em inherit !important




.dashboard-action
  font-size 1.3rem
  opacity 0.7
  transition all .3s ease
  display block
  height size_rounded_button*1.3
  width @height
  line-height @height
  text-align center
  background white
  color color_dark
  border 1px solid rgba(color_dark,0.2)
  border-radius 50%
  transition all 0.1s ease-in-out

  &:hover
  &.active
    color white
    opacity 1
    background lighten(color_dark,10%)
  &:hover
    opacity 0.8
  &:active
    background color_dark
