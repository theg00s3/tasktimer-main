/* COLORS */
color_dark = #394240
color_pomodoro = #ED5A3A
color_pomodoro = #F22B00
color_pomodoro = #DF2E2E
color_pomodoro_leaf = #24b524
color_text = #292e31
color_text_light = #6f7c82
color_text_dark = #292e31
color_heading = darken(color_text,25%)
color_link = #008cdd
color_light = #FEFEFE
color_light_grey = #EDEDED
color_twitter = #019CD7
color_github = #333333


header_padding = .75rem
header_height  = header_padding + 0.7rem
limit = 47em


@import 'general/*'
@import 'components/*'

body
  background #f8f9fb

main
  margin-top (header_height*2)
  min-height 500px

.limit
  max-width limit
  margin-left auto
  margin-right @margin-left
  padding-left 0.5em
  padding-right @padding-left

  &.extended
    max-width limit*1.4

.content
  @extend .limit


.tac
  text-align center
