@import 'styles/vars'
@import 'styles/typography'
@import 'styles/layout'

/* apply a natural box layout model to all elements, but allowing components to change */
/* http://www.paulirish.com/2012/box-sizing-border-box-ftw/ */
html
  box-sizing border-box

*, *:before, *:after
  box-sizing inherit

*
  transition-duration .5s
  transition-timing-function ease
  transition-property background,color,backgroun-color,border
body
  font 16px 'Lato', helvetica, arial, sans-serif
  line-height 1.4em
  color #4d4d4d
  -webkit-font-smoothing antialiased
  font-weight 300
  background-color color_background

#nprogress .bar
  background color_pomodoro

#nprogress .peg
  box-shadow 0 0 10px color_pomodoro, 0 0 5px color_pomodoro

.ovh
  overflow hidden

img
  max-width 100%

body .content ul
  list-style-type none
  margin 0
  padding 0


.columns
  display flex
  flex-direction row
  flex-wrap wrap
  width 100%

.column
  display flex
  flex-direction column
  flex-basis 100%
  flex 1

.pad
  padding 1em
.pad-v
  padding-top 1em
  padding-bottom 1em
.pad-h
  padding-left 1em
  padding-right 1em

.border
  border: 1px solid #ececec;

.no-m
  margin 0

*
  outline none

.float-right
  float right

.tal
  text-align left
.tar
  text-align right



@keyframes fade-from-right-to-left
  from
    opacity 0
    left 1em
  to
    opacity 8
    left 0



.error-message
  color color_pomodoro
  background rgba(color_pomodoro, 0.1)
  padding 2em
.success-message
  color color_pomodoro_leaf
  background rgba(color_pomodoro_leaf, 0.1)
  padding 2em

.usn
  user-select none


.dark-mode *
  color white !important
  background-color #222 !important

.hover-container .hover-element
  opacity 0
  transition all .3s ease-in-out
.hover-container:hover .hover-element
  opacity 1


.is-one-third
  flex none
  width 33.3333%
