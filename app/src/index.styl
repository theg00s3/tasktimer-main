@import 'styles/vars'

/* apply a natural box layout model to all elements, but allowing components to change */
/* http://www.paulirish.com/2012/box-sizing-border-box-ftw/ */
html
  box-sizing border-box

*, *:before, *:after
  box-sizing inherit

body
  font 16px 'Lato', helvetica, arial, sans-serif
  line-height 1.4em
  color #4d4d4d
  -webkit-font-smoothing antialiased
  font-weight 300
  background-color color_background

@import 'styles/typography'
@import 'styles/layout'

#nprogress .bar
  background color_pomodoro

#nprogress .peg
  box-shadow 0 0 10px color_pomodoro, 0 0 5px color_pomodoro

.ovh
  overflow hidden

img
  max-width 100%

body .content ul
  list-style-type none
  margin-left 0



.columns
  display flex
  flex-direction row
  flex-wrap wrap
  width 100%

.column
  display flex
  flex-direction column
  flex-basis 100%
  flex 1

.pad
  padding 1em
.pad-v
  padding-top 1em
  padding-bottom 1em
.pad-h
  padding-left 1em
  padding-right 1em

.border
  border: 1px solid #ececec;

.no-m
  margin 0