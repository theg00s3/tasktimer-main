@import 'vars'

html
  height 100%

body
  position relative
  margin 0
  padding 0
  min-height 100%

.container
  max-width container_width
  margin-right auto
  margin-left @margin-right

.main-content
  padding 3rem .5rem
  min-height 100vh

.content
  @extend .container


.tac
  text-align center

.login-invite
  @extend .tac
  margin-top 4rem

.ovs
  overflow scroll
