@import 'vars'

body
  color color_text_light
  font-weight 300
  font-size 17px
  line-height 1.33

h1, h2, h3, h4, h5, h6
  color color_text_light
  font-weight 300

h1 {
  margin-top: 0;
  font-size: 2em;
}

h2 {font-size: 1.6em;}

h3 {font-size: 1.3em;}

h4 {font-size: 1.1em;}

a, .link
  cursor pointer
  color color_text_dark
  font-weight bold !important
  text-decoration none
  transition color .3s ease
  &:hover
    color darken(color_pomodoro, 10%) !important

.action
  text-decoration underline


.light
  color lighten(color_text_light, 20%)

.giant
  font-size 2.5em
  margin-top 1em
  margin-bottom @margin-top

.medium
  font-size 2em
  margin-top 1em
  margin-bottom @margin-top

label
  font-weight bold
