header[role=header]
  height 3em
  position relative
  z-index 9000
  background color_white
  padding-left 0.5em
  padding-right @padding-left
  border-bottom 1px solid color_light_grey

  .content
    padding 0

  .menu
    display inline-block
    list-style-type none
    font-size 0.8em
    margin 0
    padding 0
    li
      display inline-block
      a
        padding 0.8rem 0.6rem
        color black
        &:hover, &:focus
          text-decoration none
          background-color darken(color_white, 4%)
          #main-header.white &
            background-color transparent
            text-decoration underline

#main-header
  &.white, &.white *
    color white
    border-color white

  header[role=header]
    background none
    border-bottom none
