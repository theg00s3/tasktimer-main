header[role=header]
  position relative
  z-index 9000
  background color_white
  border-bottom 1px solid color_light_grey

  .content
    padding 0

  .menu
    display inline-block
    list-style-type none
    font-size 0.8em
    margin 0
    padding 0
    li
      display inline-block
  a
    padding 1.1rem 0.5rem
    min-width 2.5rem
    text-align center
    border-bottom 3px solid transparent
    &:hover, &:focus, &.active
      text-decoration none
      border-bottom 3px solid white
      background-color transparent

  .brand
    margin-left -0.5rem

#main-header
  *
    color white

  header[role=header]
    background none
    border-bottom none
