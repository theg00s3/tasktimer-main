@import '../styles/vars'
.todo
  user-select none
  border-bottom 1px solid #ededed
  position relative
  padding 0
  width 100%
  font-size 1.3em
  &:last-child
    border-bottom none

.todo .text
  display block
  word-break break-word
  font-weight 400
  padding 15px 60px 15px 15px
  line-height 1.2
  transition color 0.4s
  margin-left 2em

.todo .destroy
.todo .complete
  position absolute
  top 0
  bottom 0
  width 50px
  height 50px
  margin auto 0
  transition color 0.2s ease-out
  padding 0
  border 0
  background none
  display block
.todo .destroy
  right 10px
  color #cc9a9a
.todo .complete
  left 10px
  color #91bf91

.todo .destroy:hover
  color #af5b5e
.todo .destroy:after
  content '×'
  font-size 1.5rem

.todo .complete:hover
  color rgb(18, 163, 18)
.todo .complete:after
  content '✓'
  font-size 1.5rem

.todo.completed .text, .todo.deleted .text
  color #d9d9d9
  text-decoration line-through

