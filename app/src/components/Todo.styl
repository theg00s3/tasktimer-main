@import '../styles/vars'
.todo
  user-select none
  border-bottom 1px solid #ededed
  position relative
  padding 0
  width 100%
  font-size 1.3em
  &:last-child
    border-bottom none

.todo [type=checkbox]
  display none

.todo .todo-check-toggle::before
  display: block;
  position: absolute;
  left: .5em;
  top: .5em;
  width: 1.5em;
  height: 1.5em;
  content: url("data:image/png;base64,");

.todo .todo-assoc-toggle::before
  display: block;
  position: absolute;
  left: 2.5em;
  top: .5em;
  width: 1.5em;
  height: 1.5em;
  content: url("data:image/png;base64,");

.todo [type="checkbox"]:checked + label::before
  content url("data:image/png;base64,");
.todo [type="checkbox"]:checked + label::before
  content url("data:image/png;base64,");

.todo .text
  display block
  white-space pre
  word-break break-word
  font-weight 400
  padding 15px 60px 15px 15px
  margin-left 0
  line-height 1.2
  transition color 0.4s
.completable.todo .text
  margin-left 2em

.todo.completed .text, .todo.deleted .text
  color #d9d9d9
  text-decoration line-through

.todo .destroy
  display none
  position absolute
  top 0
  right 10px
  bottom 0
  width 50px
  height 50px
  margin auto 0
  color #cc9a9a
  transition color 0.2s ease-out
  padding 0
  border 0
  background none
  appearance none

.todo .destroy:hover
  color #af5b5e

.todo .destroy:after
  content 'Ã—'
  font-size 1.5rem

.todo:hover .destroy
  display block

.todo .edit-view, .todo.editing .normal-view
  display none

.todo.editing .edit-view
  display block
  width 506px
  padding 13px 17px 12px 17px
  margin 0 0 0 43px

.todo.editing .edit
  position relative
  margin 0
  width 100%
  font-size 1em
  font-family inherit
  font-weight bold
  line-height 1em
  border 0
  outline none
  padding 2px 0
  border-bottom 1px dotted black
  box-sizing border-box
  -webkit-font-smoothing antialiased
