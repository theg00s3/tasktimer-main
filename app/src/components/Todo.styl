/*
EDIT VIEW
*/
.todo .edit-view, .todo.editing .normal-view
  display none

.todo.editing .edit-view
  display block
  width 380px
  padding 15px 60px 15px 15px
  margin 0

.todo.editing .edit
  position relative
  margin 0
  padding 0
  width 100%
  height 100%
  font-size 1em
  font-family inherit
  line-height 1.15em
  border 0
  outline none
  border-bottom 1px dotted black
  box-sizing border-box
  -webkit-font-smoothing antialiased
  resize none
  margin-left 2em
  background #f5f5f5

