header .dropdown
  float left
  margin 0
  padding 0
  list-style-type none
  position relative

.dropdown
  position relative
  padding-top 0.2rem !important
  padding-bottom 0.2rem !important
  line-height 1.8
  vertical-align middle

  > button
    vertical-align sub

  &:after
    content ''
    display block
    transition all 300ms cubic-bezier(0.34,1.61,0.7,1)
    background-image url('data:image/png;base64,')
    background-size  contain
    height 5px
    width  8px
    position absolute
    top   50%
    right -7%

  .white &:after
    background-image url('data:image/png;base64,')

  &.opened:after, &:hover:after, &:active:after
    transform rotate(180deg)

  .menu
    position absolute
    top 100%
    right 0
    width 6.5rem
    display none
    background white
    color color_text_dark !important
    box-shadow 0px 5px 25px -5px #333
    list-style-type none
    border-radius 5px
    text-align left
    z-index 10000
    margin 0
    padding 0
    font-weight bold
    font-size 0.8rem

    &:before
      content ''
      position absolute
      display block
      width 30px
      height 12px
      top -10px
      right 0px
      background-image url('data:image/png;base64,')
      background-size contain

    li
      text-indent 0.75rem

      &.divider
        margin-top 0.5rem

      a
        display block
        font-size 0.8rem
        line-height 1em
        white-space nowrap
        padding 0.6rem 0.2rem
        font-smoothing subpixel-antialiased
        font-weight 400
        margin 0
        color color_text !important

        &:hover
          text-decoration none
          font-weight 400 !important
          color darken(color_text_dark,100%) !important

  .menu-text
    cursor pointer
    font-family inherit
    font-size 0.8em
    display inline-block
    text-decoration none
    font-weight bold
    padding 0.35rem 0.75rem
    vertical-align text-top


.dropdown.opened .menu, .dropdown:hover .menu, .dropdown:focus .menu
  display block
  transform scale(1) !important
  transform-origin 90% 5%
  transition all 300ms cubic-bezier(0.34,1.3,0.7,1)
