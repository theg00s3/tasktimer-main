.login-logout
  float right
  padding 0.6rem 0

  &.big
    font-size 1.35em

    .text
      @extend h6
      text-shadow none

  &.left
    float left

  &.center
    float none
    text-align center

  .text
    text-shadow none


  .text, a
    color color_text
    font-size 0.8em
    font-weight bold
    &.logout
      padding 0.2rem 0.7rem

  i
    vertical-align sub

.login-buttons
  float right

.center .login-buttons
  float none

.login-button
  width 1.5em
  display inline-block
  text-indent 0
  text-align center
  padding-left 0.5em
  padding-right @padding-left

  &:first-child
    margin-left 0.5em !important
    border-right 1px solid color_light_grey

  &.twitter
    color color_twitter
  &.github
    color color_github
