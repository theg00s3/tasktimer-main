@import '../styles/vars'
@import '../styles/layout'

.top-bar-container
  background-color color_background
  border-bottom 1px solid rgba(49,78,95,0.075)

.navigation-bar
  @extends .container
  overflow hidden
  padding 0.6rem 0.1rem

  a, .link, .item
    vertical-align middle
    text-align center
    display inline-block
    padding-left 0.5em
    padding-right @padding-left
    font-size 0.9em
    color black
    font-weight bold

.brand
  display inline-block
  width 1.7em
  height @width
  background-size 100%
  background-image url("../assets/images/pomodoro.cc.png")

.underline
  text-decoration underline

.float-right
  float right
  overflow hidden

.pro
  background-color color_pomodoro !important
  color white !important
  font-size 1rem
  vertical-align super
  font-weight bold
  border-radius 5px
  padding 0.2rem 0.3rem
  border 1px solid transparent
  &:hover
    background-color white !important
    color color_pomodoro !important
    border 1px solid color_pomodoro !important

.spinner {
  width: 1.5em;
  height: 1.5em;
  background-color: #333;
  border-radius: 100%;
  -webkit-animation: sk-scaleout 1.0s infinite ease-in-out;
  animation: sk-scaleout 1.0s infinite ease-in-out;
}

.login-container
  animation fade-from-right-to-left .75s ease-out

@keyframes sk-scaleout {
  from {
    opacity: 0.3;
    -webkit-transform: scale(0);
    transform: scale(0);
  }
  to {
    opacity: 1;
    -webkit-transform: scale(1.0);
    transform: scale(1.0);
    opacity: 0;
  }
}