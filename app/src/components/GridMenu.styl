.grid-menu
  @extends .block

  .col
    position relative
    height 12em
    text-align center

    @media (max-width: (limit*0.9))
      display block
      width 100%

    border-left 1px solid darken(color_light, 5%)
    &:first-child
      border-left none
    &:last-child
      border-right none
    @media (max-width: (limit*0.9))
      border-left none
      border-top 1px solid darken(color_light, 5%)
      &:first-child
        border-left top


    .heading, .lead, i.main-icon
      position absolute
      margin 0
      left 0.5em
      right 0.5em
      text-align center

    i.main-icon
      font-size 6em
      top 1.5rem
      color rgb(98, 98, 98)
      color color_text_dark

    .heading
      top 0.5em
      font-size 1.1em
      font-weight bold

    .lead
      bottom .5em
      font-size 0.85em
      color lighten(color_dark, 30%)
