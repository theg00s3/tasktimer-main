.bubble
  position fixed
  bottom 0
  right 50%
  border-radius 50%
  height 14px
  width 14px
  transform rotateX(55deg) translateX(50%)
  z-index 10000
  &:after
    content ""
    border-radius 50%
    height 40px
    width 40px
    position absolute
    margin -13px 0 0 -13px
    animation pulsate 1s ease-out
    animation-iteration-count infinite
    opacity 0.0
    box-shadow 0 0 1px 2px #89849b
    animation-delay 1.1s

@keyframes pulsate
  0%
    transform scale(0.1, 0.1)
    opacity 0.0
  50%
    opacity 1.0
  100%
    transform scale(1.2, 1.2)
    opacity 0
