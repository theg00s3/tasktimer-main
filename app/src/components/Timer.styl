@import '../styles/vars'
.timer
  margin 5rem auto 2rem
  line-height 1
  text-align center
  clear both
  color color_text_light
  font-size 8.4em
  text-align center
  font-weight 300
  @media all and (max-width container_width)
    font-size 7.6em

input.minutes, input.seconds {
  line-height: 1;
  text-align: center;
  clear: both;
  color: #555;
  font-size: 1em;
  text-align: center;
  font-family: inherit;
  font-weight: 300;
  display: inline-block;
  width: 1.3em;
  height: 1em;
  line-height: 1em;
  outline: none;
  border: none;
}