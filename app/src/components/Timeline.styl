.timeline
  margin 1em
  padding 0
  list-style-type none

  li
    overflow hidden
    padding-left .75em
    margin-top .3em
    margin-bottom .3em
    border-left 5px solid transparent

    &.type-pomodoro
      border-color color_pomodoro
    &.type-break
      border-color color_pomodoro_leaf

    .minutes
      display inline-block
      text-align center
      width 2.5em
      font-weight bold

    .startedAt
      display inline-block
      font-style italic
      float right
      margin-right 1em
