.sound-settings-buttons-container
  text-align center
  padding 0
  
  button
    background color_yellow
    color black
    margin 0
    padding 0.3em 1.5em
    border-radius 0
    &:first-child
      border-top-left-radius 0.5rem
      border-bottom-left-radius @border-top-left-radius
      border-left none
    &:last-child
      border-top-right-radius 0.5rem
      border-bottom-right-radius @border-top-right-radius
      border-right none

    i:before
      width 0.5em
    
    span
      padding-left 1em
      font-size 0.8em
      font-weight normal