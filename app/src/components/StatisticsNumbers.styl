.statistics-numbers-container
  display flex
  > div
    text-align center
    flex 1
    min-height 5em
    padding 1em
    border-right 1px solid color_light_grey
    &:last-child
      border-right none

    > *
      vertical-align middle
    .number
      font-size 5em
      margin-left 0.75rem
      margin-right @margin-left
      &.small
        font-size 2.5em

    .text
      font-size 1em
      &.small
        font-size 0.7em

    .small
      font-size 0.9em